{{ if eq .chezmoi.os "darwin" -}}
#!/bin/bash

brew bundle --file=/dev/stdin <<EOF
{{ range .packages.darwin.brews -}}
brew {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.casks -}}
cask {{ . | quote }}
{{ end -}}
EOF
{{ end -}}

echo "=== Installing unattended packages ==="
{{ range .packages.darwin.unattended_install -}}
{{ range .command -}}
{{ . }}
{{ end }}
{{ end }}
